<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sign_in_text"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_button"/>
    <TextView
        android:id="@+id/sign_in_id"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_text"/>
    <TextView
        android:id="@+id/sign_in_lang"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/sign_out_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Json Test"
        android:id="@+id/test_query_button"
        android:layout_below="@+id/sign_out_button"
        android:layout_alignLeft="@+id/sign_out_button"
        android:layout_alignStart="@+id/sign_out_button"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rides"
        android:id="@+id/all_rides"
        android:layout_below="@+id/test_query_button"
        android:layout_toLeftOf="@+id/test_query_button"
        android:layout_toStartOf="@+id/test_query_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreateRide"
        android:id="@+id/create_ride"
        android:layout_below="@+id/test_query_button"
        android:layout_toRightOf="@+id/all_rides"
        android:layout_toEndOf="@+id/all_rides" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Users"
        android:id="@+id/all_users"
        android:layout_alignTop="@+id/create_ride"
        android:layout_toRightOf="@+id/create_ride"
        android:layout_toEndOf="@+id/create_ride" />

    <!-- Temporary button to inflate My Rides Activity -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Rides"
        android:id="@+id/my_rides_button"
        android:layout_below="@+id/sign_out_button"
        android:layout_toLeftOf="@+id/sign_out_button"
        android:layout_toStartOf="@+id/sign_out_button" />

</RelativeLayout>