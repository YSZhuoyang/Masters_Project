.row(data-ng-controller='TableCtrl')
  .col-lg-12
    rd-widget
      rd-widget-header(icon='fa-tasks', title='Servers')
        a(href='#') Manage
      rd-widget-body(classes='medium no-padding')
        .table-responsive
          table.table.table-hover
            tbody
              tr(data-ng-repeat='group in groups', ng-click="setMemReq($index);")
                td {{group.groupname}}
                td {{group.location}}
                td {{group.introduction}}
                td {{group.group_location}}
              tr
                td RDVMPC003
                td 76.117.212.33
                td
                  span.text-danger(tooltip='Server Down!')
                    i.fa.fa-warning
              tr
                td RDESX004
                td 252.37.192.235
                td
                  span.text-success
                    i.fa.fa-check
      rd-widget-footer
        ul.pagination.pagination-sm.pull-right
          li
            a(href='#') «
          li
            a(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#') »
        .clearfix
