.row(data-ng-controller='TableCtrl')
  .col-lg-12
    rd-widget
      rd-widget-header(icon='fa-tasks', title='Groups')
        a(href='#') Manage
      rd-widget-body(classes='medium no-padding')
        .table-responsive
          table.table.table-hover
            tbody
              tr(data-ng-repeat='group in groups', ng-click="setMemReq($index);", ng-class="{'info':$index==selectedIndex}")
                td {{group.groupname}}
                td {{group.location}}
                td {{group.introduction}}
                td {{group.group_location}}
      rd-widget-footer
        ul.pagination.pagination-sm.pull-right
          li
            a(href='#') «
          li
            a(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#') »
        .clearfix
  .col-lg-6
    rd-widget
      rd-widget-header(icon='fa-tasks', title='Members')
        a(href='#') Manage
      rd-widget-body(classes='medium no-padding')
        .table-responsive
          table.table.table-striped
            tbody
              tr(data-ng-repeat='member in members')
                td {{member.username}}
                td {{member.phone}}
      rd-widget-footer
        ul.pagination.pagination-sm.pull-right
          li
            a(href='#') «
          li
            a(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') »
        .clearfix

  .col-lg-6
    rd-widget
      rd-widget-header(icon='fa-tasks', title='Requests')
        a(href='#') Manage
      rd-widget-body(classes='medium no-padding')
        .table-responsive
          table.table.table-striped
            tbody
              tr(data-ng-repeat='request in requests')
                td {{request.user.username}}
                td {{request.requestDate}}
                td
                  span.text-success(tooltip='Accept')
                    i.fa.fa-check
                td
                  span.text-danger(tooltip='Reject')
                    i.fa.fa-times
      rd-widget-footer
        ul.pagination.pagination-sm.pull-right
          li
            a(href='#') «
          li
            a(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') »
        .clearfix
